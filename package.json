{
    "name": "mernt-template",
    "version": "1.0.0",
    "description": "Template for MERN with Typescript project",
    "private": true,
    "scripts": {
        "start": "npm run server:start",
        "server:start": "npm run start --prefix server",
        "dev": "npm run client:server",
        "client:server": "concurrently \"npm run server\" \"npm run client\"",
        "client": "npm run start --prefix client",
        "server": "npm run dev --prefix server",
        "build:client": "npm run build --prefix client",
        "build:server": "npm run build --prefix server"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lehaisanya/mernt-template.git"
    },
    "keywords": [
        "mern",
        "mongodb",
        "express",
        "react",
        "nodejs",
        "typescript"
    ],
    "author": "lehaisanya <lehaisanya@gmail.com>",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^7.0.0"
    }
}
